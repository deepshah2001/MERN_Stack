<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %>!</h1>
</div>

<div class="box">
  <ul>
    <% for(let i = 0; i < newTasks.length; i++) { %>
    <div class="item">
      <input type="checkbox" />
      <p><%= newTasks[i] %></p>
    </div>
    <% } %>
  </ul>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="task"
      placeholder="New Task Here!"
      autocomplete="off"
    />
    <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>

<%- include("footer") -%>
