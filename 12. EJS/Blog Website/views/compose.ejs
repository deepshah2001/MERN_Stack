<h1>Compose</h1>
<form action="\compose" method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input
      type="text"
      name="postTitle"
      class="form-control"
      id="exampleFormControlInput1"
      autocomplete="off"
    />
